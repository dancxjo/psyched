[Unit]
Description=Psyched pilot Service
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/pete/psyched
Environment=HOST=cerebellum
ExecStart=/home/pete/psyched/hosts/cerebellum/modules/pilot/launch.sh
ExecStop=/home/pete/psyched/hosts/cerebellum/modules/pilot/shutdown.sh
Restart=on-failure
RestartSec=2
User=pete
KillMode=control-group
TimeoutStopSec=20

[Install]
WantedBy=multi-user.target
