#!/usr/bin/env bash
set -euo pipefail

# Teardown all modules for this host by running each module's teardown.sh in the background.
# It scans hosts/$(hostname -s)/modules/* and executes $module/teardown.sh &

REPO_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
HOST_SHORT="${HOST:-$(hostname -s)}"
MODULES_DIR="${REPO_DIR}/hosts/${HOST_SHORT}/modules"

# Optionally source the workspace environment if available
if [ -f "${REPO_DIR}/install/setup.bash" ]; then
  # shellcheck disable=SC1091
  set +u
  source "${REPO_DIR}/install/setup.bash"
  set -u
fi

# Nothing to do if modules dir missing or empty
if [ ! -d "${MODULES_DIR}" ]; then
  echo "[teardown] No modules directory for host '${HOST_SHORT}' at ${MODULES_DIR}. Nothing to teardown." >&2
  exit 0
fi

shopt -s nullglob
modules=("${MODULES_DIR}"/*)
shopt -u nullglob

if [ ${#modules[@]} -eq 0 ]; then
  echo "[teardown] No modules configured under ${MODULES_DIR}." >&2
  exit 0
fi

for module in "${modules[@]}"; do
  if [ -d "$module" ] && [ -x "$module/teardown.sh" ]; then
    echo "[teardown] Running teardown for $(basename "$module")..."
    ( cd "$module" && "./teardown.sh" ) &
  elif [ -d "$module" ] && [ -f "$module/teardown.sh" ]; then
    echo "[teardown] Running teardown for $(basename "$module") (non-exec teardown.sh)..."
    ( cd "$module" && bash "./teardown.sh" ) &
  else
    echo "[teardown] Skipping $(basename "$module"): no teardown.sh found" >&2
  fi
done

# Exit immediately; children continue in background.
echo "[teardown] All teardown commands dispatched in background."
exit 0
