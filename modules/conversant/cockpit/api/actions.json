{
    "version": 1,
    "actions": [
        {
            "name": "hesitate",
            "signature": "hesitate()",
            "description": "Trigger an immediate hesitation or filler utterance.",
            "kind": "publish-topic",
            "defaults": {
                "topic": "/conversant/hesitate",
                "message_type": "std_msgs/msg/Empty",
                "payload": {}
            },
            "parameters": {
                "type": "object",
                "additionalProperties": false
            }
        },
        {
            "name": "take_turn",
            "signature": "take_turn(message: str, hint?: string)",
            "description": "Ask Conversant to respond to the current thread with optional guidance.",
            "kind": "publish-topic",
            "defaults": {
                "topic": "/conversant/concern",
                "message_type": "std_msgs/msg/String",
                "payload_map": {
                    "message": "data"
                }
            },
            "parameters": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "description": "Message text or JSON payload including fields like message, thread_id, hint, escalate.",
                        "minLength": 1,
                        "maxLength": 400
                    },
                    "hint": {
                        "type": "string",
                        "description": "Optional operator hint to append to the system message.",
                        "minLength": 1,
                        "maxLength": 400
                    }
                },
                "required": [
                    "message"
                ],
                "additionalProperties": false
            }
        },
        {
            "name": "turn_taking_mode",
            "signature": "turn_taking_mode(mode: str)",
            "description": "Adjust Conversant's turn-taking profile. Provide a preset name or JSON payload.",
            "kind": "publish-topic",
            "defaults": {
                "topic": "/conversant/turn_control",
                "message_type": "std_msgs/msg/String",
                "payload_map": {
                    "mode": "data"
                }
            },
            "parameters": {
                "type": "object",
                "properties": {
                    "mode": {
                        "type": "string",
                        "description": "Mode preset (aggressive, balanced, patient) or JSON payload for advanced control.",
                        "minLength": 1,
                        "maxLength": 200
                    }
                },
                "required": [
                    "mode"
                ],
                "additionalProperties": false
            }
        }
    ]
}