{
  "name": "Voice",
  "description": "Text-to-speech synthesis and audio output",
  "controls": [
    {
      "type": "info",
      "label": "Voice Topic",
      "value": "${VOICE_TOPIC:-/voice}"
    },
    {
      "type": "info",
      "label": "TTS Engine", 
      "value": "${VOICE_TTS_ENGINE:-espeak}"
    },
    {
      "type": "slider",
      "label": "Volume",
      "id": "voice_volume",
      "min": 0,
      "max": 150,
      "value": "${VOICE_VOLUME:-100}",
      "unit": "%"
    },
    {
      "type": "select",
      "label": "Speed",
      "id": "voice_speed", 
      "options": [
        {"value": "slow", "label": "Slow"},
        {"value": "normal", "label": "Normal"},
        {"value": "fast", "label": "Fast"}
      ],
      "value": "${VOICE_SPEED:-normal}"
    }
  ]
}