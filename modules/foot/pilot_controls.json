{
  "name": "Foot",
  "description": "Mobile robot base control and odometry",
  "controls": [
    {
      "type": "info",
      "label": "Command Topic",
      "value": "${FOOT_CMD_VEL_TOPIC:-/cmd_vel}"
    },
    {
      "type": "info",
      "label": "Odometry Topic", 
      "value": "${FOOT_ODOM_TOPIC:-/odom}"
    },
    {
      "type": "info",
      "label": "Base Type",
      "value": "${FOOT_BASE_TYPE:-create3}"
    },
    {
      "type": "slider",
      "label": "Max Linear Speed",
      "id": "foot_max_linear",
      "min": 0.1,
      "max": 2.0,
      "step": 0.1,
      "value": "${FOOT_MAX_LINEAR:-0.5}",
      "unit": "m/s"
    },
    {
      "type": "slider",
      "label": "Max Angular Speed", 
      "id": "foot_max_angular",
      "min": 0.1,
      "max": 3.0,
      "step": 0.1,
      "value": "${FOOT_MAX_ANGULAR:-1.0}",
      "unit": "rad/s"
    },
    {
      "type": "button",
      "label": "Emergency Stop",
      "id": "foot_estop",
      "action": "emergency_stop",
      "style": "danger"
    }
  ]
}