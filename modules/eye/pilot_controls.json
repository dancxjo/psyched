{
  "name": "Eye",
  "description": "Camera capture and computer vision",
  "controls": [
    {
      "type": "info",
      "label": "Camera Topic",
      "value": "${EYE_CAMERA_TOPIC:-/camera/image_raw}"
    },
    {
      "type": "info", 
      "label": "Camera Device",
      "value": "${EYE_CAMERA_DEVICE:-/dev/video0}"
    },
    {
      "type": "info",
      "label": "Resolution",
      "value": "${EYE_WIDTH:-640}x${EYE_HEIGHT:-480}"
    },
    {
      "type": "info",
      "label": "FPS",
      "value": "${EYE_FPS:-30}"
    },
    {
      "type": "toggle",
      "label": "Enable Recording",
      "id": "eye_recording",
      "value": false
    },
    {
      "type": "button",
      "label": "Take Snapshot",
      "id": "eye_snapshot",
      "action": "take_snapshot"
    }
  ]
}